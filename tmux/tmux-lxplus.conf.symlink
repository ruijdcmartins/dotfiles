# Enable mouse mode (tmux 2.1 and above)
set -g mouse on

# split panes using | and -
bind - split-window -v 
bind | split-window -h  
bind c new-window       
unbind '"'
unbind %

# Use vim keybindings in copy mode
setw -g mode-keys vi

# Use vim keybindings in copy mode 
setw -g mode-keys vi
# tmux list-keys -t vi-copy # Type for help

# Setup 'v' to begin selection as in Vim
bind-key -t vi-copy v begin-selection
